@model CongTyVanChuyen.Model.KHOHANG  
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
<link href="~/Content/DetailsStyle.css" rel="stylesheet" />
<div style="margin-top: 70px;" id="main" class="content">
    <h2 style="text-align: center">HỦY KHO HÀNG</h2>
    <br />
    <div class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="col-lg-8" style="margin: 0px auto;">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="table table-borderless">
                                <div>
                                    <hr />
                                    <dl class="dl-horizontal">
                                        <dt>
                                            Mã kho hàng
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(model => model.MaKho)
                                        </dd>

                                        <dt>
                                            Tên kho
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(model => model.TenKho)
                                        </dd>

                                        <dt>
                                            Địa chỉ  
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(model => model.DiaChi)
                                        </dd>

                                        <dt>
                                            Hàng tồn
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(model => model.TonKho)
                                        </dd>
                                    </dl>

                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.HiddenFor(model => model.MaKho)
                                        <div class="form-actions no-color">
                                            <input type="submit" value="XÓA" class="btn btn-danger" /> |
                                            @Html.ActionLink("TRỞ LẠI", "Index")
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

