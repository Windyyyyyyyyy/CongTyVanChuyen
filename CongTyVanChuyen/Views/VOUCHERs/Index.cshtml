@model IEnumerable<CongTyVanChuyen.Models.VOUCHER>

@{
    ViewBag.Title = "Index";
}

<h2>Quản lý voucher</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create",null , new { @class= "btn btn-success"})
</p>
<table class="table table-bordered">
    <tr>
        <th>
            Mã voucher
        </th>
        <th>
           Mô tả
        </th>
        <th>
            Phần trăm giảm
        </th>
        <th>
            Giảm tối đa
        </th>
        <th>
           Số lượng
        </th>
        <th>
            Tình trạng
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.moTa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.phanTram)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.toiDa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuong)
        </td>
        <td>

            @{
                if (item.isActive == true)
                {
                <p>Đang hoạt động</p>
            }
            else
            {
                <p>Không hoạt động</p>
            }
            }
            </td>
            <td>
                @Html.ActionLink("Cập nhật", "Edit", new { id = item.id }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.id }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
}

</table>
