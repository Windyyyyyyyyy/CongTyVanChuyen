@model IEnumerable<CongTyVanChuyen.Models.DONVANCHUYEN>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách đơn vận chuyển</h2>
<div class="d-flex justify-content-md-start">
    <div class="d-flex col-3 mt-2 mb-2">
        @using (Html.BeginForm("Index", "QuanLyDVC", FormMethod.Post, new { id = "myForm" }))
        {
            @Html.DropDownList("TrangThai", null, null, htmlAttributes: new { @class = "form-control", @onchange = "submitForm();" })
        }
    </div>
</div>
<table class="table table-bordered">
    <tr>
        <th>
            Tên người nhận
        </th>
        <th>
            Số nhà
        </th>
        <th>
            Thành phố
        </th>
        <th>
            Quận
        </th>
        <th>
            Phường
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Ghi chú
        </th>
        <th>
            Tiền thu hộ
        </th>
        <th>
            Tổng tiền cước
        </th>
        <th>
            Ngày tạo
        </th>
        <th>
            Tên chủ của hàng
        </th>
        <th>
            Trạng thái
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenNguoiNhan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThanhPho)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GhiChu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TienThuHo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TongTienCuoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayTao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CHUCUAHANG.TenChuCuaHang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TRANGTHAIDVC.TrangThai)
            </td>
            <td>
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaDVC }, new { @class = "btn btn-primary" })
                @if (item.TRANGTHAIDVC.id == 1 || item.TRANGTHAIDVC.id == 13)
                {
                    @Html.ActionLink("Assign", "Assign", new { id = item.MaDVC }, new { @class = "btn btn-info" })
                }
            </td>
        </tr>
    }

</table>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    function submitForm() {
        document.getElementById("myForm").submit();
    }
</script>

