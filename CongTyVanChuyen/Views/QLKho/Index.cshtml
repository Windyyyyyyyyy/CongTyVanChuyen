@using CongTyVanChuyen.Model
@using PagedList.Mvc
@model PagedList.PagedList<CongTyVanChuyen.Model.THONGTINWEBSITE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
<div class="content-wrapper">
    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <strong class="text-danger">Danh sách thông tin Website</strong>
                </h3>
                <div class="card-tools" style="display: flex">
                    @*<a class="btn btn-sm btn-success">Thêm</a>*@
                    <div class="form-group">
                        @using (Html.BeginForm("Index", "QLKho", FormMethod.Post, new { @class = "form-inline" }))
                        {
                            @Html.TextBox("searchString", "", htmlAttributes: new { @class = "form-control" })
                            <input type="submit" value="Search" class="btn btn-success" />
                        }
                    </div>
                    <div style="margin-left: auto">
                        <p>
                            @Html.ActionLink("THÊM", "Create", null, new { @class = "btn btn-primary" })
                        </p>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tr class="bg-primary p-3">
                        <th>Mã thông tin</th>
                        <th>Thông tin</th>
                        <th>Loại thông tin</th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaThongTin)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ThongTin)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LoaiThongTin)
                            </td>
                            <td>
                                @Html.ActionLink("Sửa", "Edit", new { id = item.MaThongTin }, new { @class = "btn btn-success" }) |
                                @Html.ActionLink("Xóa", "Delete", new { id = item.MaThongTin }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </section>
</div>
<div class="page-header text-right">
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    <div class="MenuTrang">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchString = ViewData["searchString"] }))
    </div>
    <style>
        .MenuTrang li {
            display: inline;
        }
    </style>
</div>