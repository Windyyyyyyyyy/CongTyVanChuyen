@model CongTyVanChuyen.Models.VANCHUYEN

@{
    ViewBag.Title = "ChuyenTiep";
    Layout = "~/Views/Shared/_LayoutTest.cshtml";
}

<h2>ChuyenTiep</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>VANCHUYEN</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)
    @Html.HiddenFor(model => model.MaDVC)
    @Html.HiddenFor(model => model.MaLoaiVC)
    @Html.HiddenFor(model => model.NgayGio)
    @Html.HiddenFor(model => model.hinhAnh)
    @Html.HiddenFor(model => model.TuChoi)
    @Html.HiddenFor(model => model.Nhan)
    @Html.HiddenFor(model => model.isDone)
    @Html.HiddenFor(model => model.MaShipper)

    <div class="form-group">
        <label>Chuyển tiếp shipper</label>
        <div class="col-md-10">
            @Html.DropDownList("Shipper", null, null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MaDVC, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
