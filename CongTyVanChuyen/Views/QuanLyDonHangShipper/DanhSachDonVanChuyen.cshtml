@using CongTyVanChuyen.Models
@using PagedList.Mvc
@model PagedList.PagedList<VANCHUYEN>
@{
    ViewBag.Title = "DanhSachDonVanChuyen";
    Layout = "~/Views/Shared/_LayoutTest.cshtml";
    int? sort = ViewBag.sort;
}
<link href="~/Content/style.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css" integrity="sha256-3sPp8BkKUE7QyPSl6VfBByBroQbKxKG7tsusY2mhbVY=" crossorigin="anonymous" />

<div class="container">
    

    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="career-search mb-60">

                <div class="d-flex justify-content-md-start">
                    <div class="d-flex col-3 mt-2 mb-2">
                        @using (Html.BeginForm("DanhSachDonVanChuyen", "QuanLyDonHangShipper", FormMethod.Post, new { id = "myForm1" }))
                        {
                            @Html.DropDownList("sort", new List<SelectListItem>
                           {
                            new SelectListItem { Text = "Đơn được giao", Value = "" },
                            new SelectListItem { Text = "Đơn đã chấp nhận", Value = "1" },
                            new SelectListItem { Text = "Đơn đã giao thành công", Value = "2" },
                            new SelectListItem { Text = "Đơn được chuyển tiếp", Value = "3" },
                            }
                            , new { onchange = "submitForm();", @class = "form-control" })
                        }
                    </div>
                </div>
                <div class="filter-result">
                    
                    @foreach (var item in Model)
                    {
                        <div class="job-box d-md-flex align-items-center justify-content-between mb-30">
                            <div class="job-left my-4 d-md-flex align-items-center flex-wrap">

                                <div class="job-content">
                                    <h5 class="text-md-left">@item.DONVANCHUYEN.TenNguoiNhan</h5>
                                    <ul>
                                        <li class="mr-md-4">
                                            <i class="zmdi zmdi-pin mr-2"></i> @item.DONVANCHUYEN.getDiaChi()
                                        </li>
                                        <li class="mr-md-4">
                                            <i class="zmdi zmdi-money mr-2"></i>  @string.Format("{0:#,##0} VNĐ", item.DONVANCHUYEN.TienThuHo)
                                        </li>
                                        <li class="mr-md-4">
                                            <i class="zmdi zmdi-time mr-2"></i> @item.DONVANCHUYEN.NgayTao
                                        </li>
                                        @if (item.chuyenShipper != null)
                                        {
                                            <li class="mr-md-4">
                                                <i class="zmdi zmdi-time mr-2"></i>Được chuyển tiếp từ shipper: @item.getTenChuyenShipper(item.chuyenShipper)
                                            </li>
                                        }

                                    </ul>
                                </div>
                            </div>
                            <div class="job-right my-4 flex-shrink-0 gap-2">
                                @if (item.Nhan == true && item.isDone == null)
                                {
                                    <a href="/QuanLyDonHangShipper/GiaoHang/@item.id" class="btn d-block w-100 d-sm-inline-block btn-light">Giao hàng</a>
                                }
                                else if (item.isDone != null)
                                {
                                    <a href="/QuanLyDonHangShipper/DonThanhCong/@item.id" class="btn d-block w-100 d-sm-inline-block btn-light">Chi tiết</a>
                                }
                                else
                                {
                                    <a href="/QuanLyDonHangShipper/Details/@item.id" class="btn d-block w-100 d-sm-inline-block btn-light">Chi tiết</a>
                                }
                            </div>
                        </div>
                    }

                </div>
            </div>

            <!-- START Pagination -->
            <div style="text-align: center">
                Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

                <div class="MenuTrang">
                    @Html.PagedListPager(Model, page => Url.Action("DanhSachDonVanChuyen", new { page, sort }))
                </div>
            </div>
            <style>
                .MenuTrang li {
                    display: inline;
                    text-align: center;
                }
            </style>
            @*<nav aria-label="Page navigation">
            <ul class="pagination pagination-reset justify-content-center">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                        <i class="zmdi zmdi-long-arrow-left"></i>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item d-none d-md-inline-block"><a class="page-link" href="#">2</a></li>
                <li class="page-item d-none d-md-inline-block"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">...</a></li>
                <li class="page-item"><a class="page-link" href="#">8</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">
                        <i class="zmdi zmdi-long-arrow-right"></i>
                    </a>
                </li>
            </ul>
        </nav>*@
            <!-- END Pagination -->
        </div>
    </div>

</div>
@*<script src="~/Scripts/jquery-3.4.1.min.js"></script>*@
<script>
    function submitForm() {
        var myForm = document.getElementById("myForm1");
        if (myForm) {
            myForm.submit();
        } else {
            console.error("Form not found");
        }
    }
</script>
